# Build the docker image with `npx nx docker-build test-app`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t test-app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system test-app && \
          adduser --system -G test-app test-app

COPY dist/apps/test-app test-app/
RUN chown -R test-app:test-app .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix test-app --omit=dev -f install

CMD [ "node", "test-app" ]
